<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Include Bootstrap for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Donation Approval</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/test">Test Donations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/settings">Settings</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container">
        <h1 class="my-4">Settings</h1>

        <form action="/settings" method="POST">
            <!-- Team ID Input -->
            <div class="mb-3">
                <label for="teamId" class="form-label">Team ID</label>
                <input type="text" class="form-control" id="teamId" name="teamId" value="<%= teamId %>">
            </div>

            <!-- Export Folder (choose via system dialog) -->
            <div class="mb-3">
                <label for="exportFilePathDisplay" class="form-label">Export Folder</label>
                <div class="input-group">
                    <input
                        type="text"
                        class="form-control"
                        id="exportFilePathDisplay"
                        value="<%= exportSettings ? exportSettings.filePath : '' %>"
                        placeholder="Choose a folder…"
                        readonly>
                    <button type="button" class="btn btn-outline-secondary" onclick="browseForFolder()">Browse…</button>
                </div>
                <!-- Hidden input actually submitted with the form -->
                <input type="hidden" id="exportFilePath" name="exportFilePath" value="<%= exportSettings ? exportSettings.filePath : '' %>">
                <div class="form-text">Select the directory where CSV/Excel exports will be written.</div>
            </div>

            <!-- Export File Name -->
            <div class="mb-3">
                <label for="exportFileName" class="form-label">Export File Name</label>
                <input type="text" class="form-control" id="exportFileName" name="exportFileName" value="<%= exportSettings.fileName %>">
            </div>

            <!-- Export Format (CSV/Excel) -->
            <div class="mb-3">
                <label for="exportFormat" class="form-label">Export Format</label>
                <select class="form-select" id="exportFormat" name="exportFormat">
                    <option value="csv" <%= exportSettings.exportFormat === 'csv' ? 'selected' : '' %>>CSV</option>
                    <option value="excel" <%= exportSettings.exportFormat === 'excel' ? 'selected' : '' %>>Excel</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save Settings</button>
        </form>

        <!-- Clear Database and Open Exported File Buttons -->
        <h2 class="my-4">Manage Files</h2>
        <div class="d-flex">
            <button class="btn btn-danger me-3" onclick="confirmClearDatabase()">Clear All Donations</button>
            <button class="btn btn-secondary me-3" onclick="openExportFile()">Open Exported File</button>
            <button class="btn btn-info" onclick="openExportDirectory()">Open Export Directory</button>
        </div>
    </div>

    <!-- Bootstrap and Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Confirmation script for clearing the database -->
    <script>
        function confirmClearDatabase() {
            if (confirm('Are you sure you want to clear the database? This action cannot be undone.')) {
                axios.post('/clear-database')
                    .then(response => {
                        alert('Database cleared successfully!');
                    })
                    .catch(error => {
                        alert('Error clearing the database: ' + error.message);
                    });
            }
        }

        // Function to open the exported file (CSV or Excel)
        function openExportFile() {
            axios.post('/open-export-file')
                .then(response => {
                    alert('Export file opened successfully!');
                })
                .catch(error => {
                    alert('Error opening the export file: ' + error.message);
                });
        }

        // Function to open the directory where the exported file is stored
        function openExportDirectory() {
            axios.post('/open-export-directory')
                .then(response => {
                    alert('Export directory opened successfully!');
                })
                .catch(error => {
                    alert('Error opening the export directory: ' + error.message);
                });
        }

        async function browseForFolder() {
            // Prefer Electron preload API if available
            if (window.electronAPI && typeof window.electronAPI.selectDirectory === 'function') {
                try {
                    const selectedPath = await window.electronAPI.selectDirectory();
                    if (selectedPath) {
                        document.getElementById('exportFilePathDisplay').value = selectedPath;
                        document.getElementById('exportFilePath').value = selectedPath;
                    }
                } catch (err) {
                    alert('Error selecting folder: ' + (err && err.message ? err.message : err));
                }
                return;
            }

            // Fallback when not running in the desktop app
            alert('Folder picker requires the desktop app. Please enter the path manually or run this in the Electron build with a folder dialog.');
  }
    </script>
</body>
</html>
