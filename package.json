{
  "dependencies": {
    "body-parser": "^1.20.3",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "extra-life-api": "^8.0.0",
    "fs": "^0.0.1-security",
    "node-vmix": "^1.7.1",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.8.0",
    "sqlite3": "^5.1.7",
    "xlsx": "^0.18.5"
  },
  "name": "extra-life-gfx-connector",
  "version": "1.0.0",
  "description": "Allows you to export donations from team to an Excel or CSV file for import to a broadcast graphics system.",
  "main": "app.js",
  "repository": "https://github.com/JTF4/extra-life-vmix-connector.git",
  "author": "David Stevens <issues@jtf4.com>",
  "license": "MIT",
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "MyApp",
    "directories": {
      "output": "release-builds"
    },
    "files": [
      "app.js",
      "views/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "icons/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "dmg": {
      "icon": "icons/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "scripts": {
    "start": "electron main.js",
    "package-all": "electron-builder --mac --win --linux",
    "package-mac": "electron-builder --mac --x64 --arm64",
    "package-mac-universal": "electron-builder --mac universal",
    "package-win": "electron-builder --win",
    "package-linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9"
  }
}
